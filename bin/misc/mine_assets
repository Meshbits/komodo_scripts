#!/usr/bin/env bash

seed_ip=$(getent hosts zero.kolo.supernet.org | awk '{ print $1 }')
source coinlist
source ~/komodo/src/pubkey.txt
args=("$@")
count=0
delay=5
while [ "x${coinlist[count]}" != "x" ]
do
  all=${coinlist[count]}
  name=${all%% *}
  supply=$(expr "$all" : '.* \(.*\)')
  if [[ "$name" != "" || "$name" != "PIZZA" || "$name" != "BEER" ]]
    then
     gen="-gen -genproclimit=2"
     komodod -pubkey=$pubkey -ac_name=$name -ac_supply=$supply -addnode="$seed_ip" $gen $args &
     sleep $delay
    fi
  count=$(( $count +1 ))
done
